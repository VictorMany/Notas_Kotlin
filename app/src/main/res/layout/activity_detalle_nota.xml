<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
   >

    <EditText
        android:id="@+id/txtTitulo"
        android:layout_width="381dp"
        android:layout_height="53dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_input"
        android:backgroundTintMode="add"
        android:ems="10"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/txtDetalleNota"
        android:layout_width="374dp"
        android:layout_height="211dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/round_input"
        android:backgroundTintMode="add"
        android:ems="10"
        android:orientation="horizontal"
        android:textAlignment="textStart"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/white"
        android:textIsSelectable="true"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/round_outline"
        android:fontFamily="sans-serif-light"
        android:onClick="GuardarNota"
        android:text="Aceptar"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/btnCancelar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_seccion" />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="150dp"
        android:layout_height="52dp"

        android:layout_marginTop="32dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="73dp"
        android:background="@drawable/round_outline"
        android:fontFamily="sans-serif-light"
        android:onClick="Eliminar"
        android:text="Eliminar"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_note" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="295dp"
        android:text="Titulo de la nota"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="264dp"
        android:layout_marginBottom="16dp"
        android:text="Contenido de la nota"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/txtDetalleNota"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_note"
        android:layout_width="134dp"
        android:layout_height="183dp"
        android:layout_marginStart="11dp"

        android:layout_marginTop="24dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/ic_menu_camera"
        android:onClick="TomarFoto"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinner_seccion"
        app:layout_constraintTop_toBottomOf="@+id/txtDetalleNota"
        tools:srcCompat="@drawable/ic_menu_camera" />

    <Spinner
        android:id="@+id/spinner_seccion"
        android:layout_width="218dp"
        android:layout_height="42dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/login_button"
        android:backgroundTint="@color/white"
        android:foregroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDetalleNota" />


</androidx.constraintlayout.widget.ConstraintLayout>

